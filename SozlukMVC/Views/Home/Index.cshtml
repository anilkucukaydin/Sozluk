@using Entity.ViewModels
@model HomeViewModel

<section id="contact">
    <div class="section-content">
        <h1 class="section-header"> <span class="content-header wow fadeIn " data-wow-delay="0.2s" data-wow-duration="2s"> Translate</span> your text</h1>
        <h3>Write and click <b>TRANSLATE</b></h3>
    </div>
    <div class="contact-section">
        <div class="container">
            @using (Html.BeginForm())
            {
                <div class="col-md-6 form-line">
                    <div class="form-group">
                        @Html.Label("Hangi Dilden", new { @for = "from" })
                        @*<label for="from"> From</label>*@

                        @Html.DropDownListFor(x=>x.FromLang, (IEnumerable<SelectListItem>)ViewBag.Langs)

                    </div>
                    <div class="form-group">
                        @Html.TextAreaFor(x=>x.FromWord, new { @class = "form-control", @placeholder = "Çevirmek istediğiniz kelime" })

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">

                        @Html.Label("Hangi Dile")
                        @Html.DropDownListFor(x=>x.ToLang, (IEnumerable<SelectListItem>)ViewBag.Langs)

                    </div>
                    <div class="form-group">
                        @Html.TextAreaFor(x=>x.ToWord, new { @placeholder = "Çeviri burada görüntülenecek", @class = "form-control" })
                        @*<textarea class="form-control" id="translated" placeholder="Translated text will be here"></textarea>*@
                    </div>
                    <div>
                        <button type="submit" class="btn btn-default submit"><i class="fa fa-globe" aria-hidden="true"></i>   translate</button>
                    </div>

                </div>
            }
        </div>
    </div>
</section>