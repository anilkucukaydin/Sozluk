@using Entity
@using Microsoft.AspNet.Identity
@model List<WordRequest>
<style>
    table {background-color:white;}
</style>
<div class="container">
    <h2>Bekleyen Kelime İstekleri</h2>

    @Html.ActionLink("Yeni İstek Oluştur","Create","WordRequests", htmlAttributes: new { @class="btn btn-success"})

    <br/><br/>

    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Kelime</th>
                <th>Dil</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Word</td>
                    <td>@item.Language.Name</td>
                    <td>
                        @if (item.Person.Id == User.Identity.GetUserId())
                        {
                            @*<a href="?sil=@item.Id">Sil</a>*@
                            @Html.ActionLink("Sil", "Index", new { @sil = item.Id })
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>